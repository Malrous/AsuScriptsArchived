local TextChatService = game:GetService("TextChatService")
local yessir

local function chatMessage(str)
    str = tostring(str)
    if TextChatService.ChatVersion == Enum.ChatVersion.TextChatService then
        TextChatService.TextChannels.RBXGeneral:SendAsync(str)
    else
        ReplicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer(str, "All")
    end
end

function uncensor(text)

    local bypasscore = {
        A = "·∫†", B = "·∏Ñ", C = "√á", D = "·∏å", E = "·∫∏", F = "·∏û", G = "·∏†",
        H = "·∏§", I = "·ªä", J = "ƒ¥", K = "·∏≤", L = "·∏∂", M = "·πÇ", N = "·πÜ",
        O = "√î", P = "·πñ", Q = "QÃ£", R = "·πö", S = "·π¢", T = "·π¨", U = "√ö",
        V = "VÃ£", W = "·∫à", X = "XÃ£", Y = "·ª¥", Z = "·∫í",
        a = "êìü", b = "bÃ¥", c = "cÃ∑", d = "dÃ∑", e = "·∫π", f = "·∏ü", g = "gÃ∂",
        h = "hÃ¥", i = "iÃ∑", j = "jÃ£", k = "·∏≥", l = "·∏∑", m = "·πÉ", n = "·πá",
        o = "√î", p = "·πó", q = "qÃ£", r = "·πõ", s = "·π£", t = "·π≠", u = "√∫",
        v = "vÃ£", w = "·∫â", x = "xÃ£", y = "·ªµ", z = "·∫ì"
    }

    local hellyea = ""

    for i = 1, #text do
        local char = text:sub(i, i)
        if bypasscore[char] then
            hellyea = hellyea .. bypasscore[char]
        else
            hellyea = hellyea .. char
        end
    end

    return hellyea
end

